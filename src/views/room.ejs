<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Rocket.Q - Perguntas e Respostas</title>
        <link rel="preconnect" href="https://fonts.gstatic.com" />
        <link
            href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="/styles/global.css" />
        <link rel="stylesheet" href="/styles/room/room.css" />
        <link rel="stylesheet" href="/styles/room/modal.css" />
        <script src="https://kit.fontawesome.com/0dd55cd624.js" crossorigin="anonymous"></script>
        <script src="/scripts/viewMode.js" defer></script>
        <script src="/scripts/main.js" defer type="module"></script>
    </head>
    <body>
        
        <div id="room" class="content">
            <header>
                <a href="/">
                    <img src="/images/logo.svg" alt="Logo Rocket.Q" />
                </a>
                
                <div class="buttons">
                    <button id="viewMode"><i class="far fa-moon"></i></button>
                    <div class="button outlined" id="room-id" data-id="<%= roomId %>">
                        #<%= roomId %>
                        <img src="/images/copy.svg" />
                    </div>
                    <a href="/create-pass" class="button">
                        <img src="/images/userswhite.svg" />
                        Criar Sala
                    </a>
                </div>
            </header>

            <main>
                <section id="question-form">
                    <h2>Faça sua pergunta</h2>
                    <form action="/question/create/<%= roomId  %> " method="POST">
                        <label for="question" class="sr-only"
                            >O que você quer perguntar?</label
                        >
                        <textarea
                            name="question"
                            id="question"
                            placeholder="O que você quer perguntar?"
                        ></textarea>
                        <footer>
                            <div>
                                <img src="/images/lock.svg" alt="cadeado" />
                                Esta pergunta é anônima
                            </div>
                            <button>Enviar</button>
                        </footer>
                    </form>
                </section>
                <section id="questions">
                    <h2 class="sr-only">Perguntas da Comunidade</h2>

                    <div class="questions">

                        <% if(isNoQuestions){ %> 
                            
                            <%- include('parts/no-question')  %> 
                            
                        <% } %> 
                        

                        <% questions.forEach(question =>{ %>

                            <div class="question-wrapper">
                                <div class="question-content">
                                    <div class="user">
                                        <img src="/images/user.svg" alt="Avatar" />
                                    </div>
                                    <div class="question">
                                        <p><%= question.title %>                                        </p>
                                    </div>
                                </div>
                                <div class="actions">
                                    <a href="#" class="check" data-id="<%= question.id %>">
                                        <img
                                            src="/images/check.svg"
                                            alt="Marcar como Lida"
                                        />
                                        Marcar como lida
                                    </a>
                                    <a href="#" class="delete" data-id="<%= question.id %>">
                                        <img
                                            src="/images/trash.svg"
                                            alt="Excluir"
                                        />
                                        Excluir
                                    </a>
                                </div>
                            </div>

                        <% }) %> 
                        

                        <% questionsRead.forEach(questionRead =>{ %>

                            <div class="question-wrapper read">
                                <div class="question-content">
                                    <div class="user">
                                        <img src="/images/user.svg" alt="Avatar" />
                                    </div>
                                    <div class="question">
                                        <p><%= questionRead.title %></p>
                                    </div>
                                </div>
                                <div class="actions">
                                    <div class="readquestion">
                                        <img
                                            src="/images/check.svg"
                                            alt="Pergunta Lida"
                                        />
                                        Pergunta Lida
                                    </div>
                                    <a href="#" class="delete" data-id="<%= questionRead.id  %>">
                                        <img
                                            src="/images/trash.svg"
                                            alt="Excluir"
                                        />
                                        Excluir
                                    </a>
                                </div>
                            </div>

                        <% }) %> 

                    </div>
                </section>
            </main>
        </div>

        <!-- MODAL -->
        <div class="modal-wrapper" onselectstart="return false">
            <div class="modal">
                <h2>Excluir pergunta</h2>
                <p>Tem certeza que você deseja excluir essa pergunta?</p>
                <form action="#" method="POST">
                    <label for-id="password" class="sr-only"
                        >Digite sua senha admin</label
                    >
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Digite sua senha"
                    />

                    <div class="buttons">
                        <div class="button grey cancel">Cancelar</div>
                        <button class="red">Sim, excluir</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
